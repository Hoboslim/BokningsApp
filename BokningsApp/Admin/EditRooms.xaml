<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.Admin.EditRooms"
             Title="EditRooms">
    <VerticalStackLayout Padding="20">
        <Image 
            WidthRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Aspect="AspectFit"
            Source="output.png" />

        <Label
            Text="Här kan du se information om olika rum."
            FontSize="Medium"
            HorizontalOptions="Center" />

        <Picker
            x:Name="roomTypePicker"
            Title="Välj typ av rum"
            SelectedIndexChanged="OnRoomTypeSelected"
            WidthRequest="250"
            Margin="0,10,0,10">
            <Picker.Items>
                <x:String>Rum med TV</x:String>
                <x:String>Rum med SmartBoard</x:String>
                <x:String>Uterum</x:String>
            </Picker.Items>
        </Picker>

        <Picker
         x:Name="roomPicker"
         Title="Välj ett rum"
         SelectedIndexChanged="OnEditRoomClicked"
         WidthRequest="250"
         Margin="0,10,0,10">
        </Picker>
        
    </VerticalStackLayout>
</ContentPage>
