<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.User.CalendarPage">
    <VerticalStackLayout Padding="10">
        <Label Text="{Binding SelectedMonth}" FontSize="24" HorizontalOptions="Center"/>
        <Grid ColumnDefinitions="*,*,*,*,*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
            <!-- Weekday Headers -->
            <Label Grid.Column="0" Text="Sun" FontSize="18" HorizontalOptions="Center"/>
            <Label Grid.Column="1" Text="Mon" FontSize="18" HorizontalOptions="Center"/>
            <Label Grid.Column="2" Text="Tue" FontSize="18" HorizontalOptions="Center"/>
            <Label Grid.Column="3" Text="Wed" FontSize="18" HorizontalOptions="Center"/>
            <Label Grid.Column="4" Text="Thu" FontSize="18" HorizontalOptions="Center"/>
            <Label Grid.Column="5" Text="Fri" FontSize="18" HorizontalOptions="Center"/>
            <Label Grid.Column="6" Text="Sat" FontSize="18" HorizontalOptions="Center"/>

            <!-- Days of the month will be populated dynamically -->
            <CollectionView ItemsSource="{Binding Days}" Grid.Row="1" Grid.ColumnSpan="7">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="7"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="1" Stroke="Gray" Padding="10" Margin="2" BackgroundColor="White">
                            <VerticalStackLayout>
                                <!-- Display the day number -->
                                <Label Text="{Binding Day}" 
                           FontSize="18" 
                           TextColor="Black"
                           HorizontalOptions="Center" 
                           VerticalOptions="Start"/>

                                <!-- Room selection Picker -->
                                <Picker Title="Pick room" 
                            ItemsSource="{Binding AvailableRooms}" 
                            SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" 
                            IsVisible="{Binding Day, Converter={StaticResource EmptyStringToBoolConverter}}"
                                        WidthRequest="250"
                            HorizontalOptions="Fill" 
                            Margin="5"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </Grid>
    </VerticalStackLayout>
</ContentPage>
