<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.User.PickTime"
             Title="PickTime">



    <VerticalStackLayout Padding="10" Spacing="20">
        <!-- Label for the room type picker -->
        <Label Text="Choose a Room Type"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Picker for selecting room type -->
        <Picker Title="Pick room type"
                ItemsSource="{Binding RoomTypes}" 
                SelectedItem="{Binding SelectedRoomType, Mode=TwoWay}">
            <Picker.ItemDisplayBinding>
                <Binding Path="RoomType" />
            </Picker.ItemDisplayBinding>
            <Picker.WidthRequest>250</Picker.WidthRequest>
            <Picker.HorizontalOptions>Center</Picker.HorizontalOptions>
            <Picker.Margin>5</Picker.Margin>
        </Picker>

        <!-- Label for the room picker -->
        <Label Text="Choose a Room"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Picker for selecting the room (to be populated dynamically based on selected room type) -->
        <Picker Title="Pick a Room"
                ItemsSource="{Binding AvailableRooms}"
                SelectedItem="{Binding SelectedRoom, Mode=TwoWay}">
            <Picker.ItemDisplayBinding>
                <Binding Path="RoomName" />
            </Picker.ItemDisplayBinding>
            <Picker.WidthRequest>250</Picker.WidthRequest>
            <Picker.HorizontalOptions>Center</Picker.HorizontalOptions>
            <Picker.Margin>5</Picker.Margin>
        </Picker>

        <!-- Time Picker for selecting the booking time -->
        <TimePicker Time="{Binding SelectedTime}"
                    Margin="5" />

        <!-- Button to confirm the booking -->
        <Button Text="Book Room"
                Command="{Binding BookRoomCommand}"
                HorizontalOptions="Center"
                Padding="10"
                Margin="5"/>
    </VerticalStackLayout>
</ContentPage>