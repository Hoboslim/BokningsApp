<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.MainPage">

    <VerticalStackLayout>
        
        <Image 
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Aspect="AspectFit"
               Source="output.png"
               ></Image>

        <Label
                Text="Välkommen till bokningsappen för grupprum"
                FontSize="Medium"
                Grid.Row="0"
                HorizontalOptions="Center"
                Grid.Column="2"
                
            />


        <Border 
            Padding="20"
            Stroke="White"
            StrokeThickness="2"
            StrokeShape="RoundRectangle"
            BackgroundColor="Transparent"
            HorizontalOptions="Center">

            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label
            Text="Email"
            FontSize="Medium"
            HorizontalOptions="Center"
            >
                </Label>
                
                <Entry
            x:Name="EmailEntry"
            BackgroundColor="AliceBlue"
            TextColor="Black"
            Placeholder="Login"
            WidthRequest="250"
            ></Entry>
                
                <Label  
            Text="Password"
            FontSize="Medium"
            HorizontalOptions="Center"
            ></Label>
                
                <Entry
            x:Name="PasswordEntry"
            BackgroundColor="AliceBlue"
            TextColor="Black"
            Placeholder="Password"
            WidthRequest="250"
            ></Entry>
                
                
                <Button
            Text="Sign in"
            FontSize="Small"
            WidthRequest="250"
            BackgroundColor="Black"
            TextColor="White"
            BorderWidth="5"
            BorderColor="AliceBlue"
            Margin="15"
            Clicked="OnButtonLoggin"
            ></Button>
                <!--<Button
            Text="Admin Loggin"
            FontSize="Small"
            WidthRequest="250"
            BackgroundColor="Black"
            TextColor="White"
            BorderWidth="5"
            BorderColor="AliceBlue"
            Margin="10"
            Clicked="OnAdminPage"-->
                    <!--/>-->
            </VerticalStackLayout>
        </Border>
                <Button
            Text="Register"
            FontSize="Small"
            WidthRequest="250"
            BackgroundColor="Black"
            TextColor="White"
            BorderWidth="5"
            BorderColor="AliceBlue"
            Margin="10"
            Clicked="OnRegisterPageButtonClicked"
        ></Button>

      

    </VerticalStackLayout>
</ContentPage>