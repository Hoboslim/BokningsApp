<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.Admin.AdminLoggedIn"
             Title="AdminLoggedIn">
    <VerticalStackLayout>
        <Image 
        WidthRequest="200"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Aspect="AspectFit"
        Source="output.png" />

        <Label
        Text="VÃ¤lkommen till din admin vy."
        FontSize="Medium"
        HorizontalOptions="Center" />

        <Button
        Text="Se gamla bokningar"
        FontSize="Medium"
        WidthRequest="250"
        BackgroundColor="Black"
        TextColor="White"
        BorderWidth="5"
        BorderColor="AliceBlue"
        Margin="15"
        Clicked="OnOldBookings" />

        <Button
        Text="Se bokade rum"
        FontSize="Medium"
        WidthRequest="250"
        BackgroundColor="Black"
        TextColor="White"
        BorderWidth="5"
        BorderColor="AliceBlue"
        Margin="15"
        Clicked="OnBokedRooms" />

        <Button
        Text="Redigera rum"
        FontSize="Medium"
        WidthRequest="250"
        BackgroundColor="Black"
        TextColor="White"
        BorderWidth="5"
        BorderColor="AliceBlue"
        Margin="15"
        Clicked="OnEditRooms" />

        <Button
        Text="Skapa rum"
        FontSize="Medium"
        WidthRequest="300"
        BackgroundColor="Black"
        TextColor="White"
        BorderWidth="5"
        BorderColor="AliceBlue"
        Margin="15"
        Clicked="OnAddRoom" />
        
        <Button
        Text="Skapa rumtyp"
        FontSize="Medium"
        WidthRequest="300"
        BackgroundColor="Black"
        TextColor="White"
        BorderWidth="5"
        BorderColor="AliceBlue"
        Margin="15"
        Clicked="OnAddRoomType" />
    </VerticalStackLayout>
</ContentPage>