<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.Admin.BookingHistory"
             Title="Bokningshistorik">
    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Image 
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Aspect="AspectFit"
                Source="output.png" />

            <Label
                Text="HÃ¤r ser du bokningshistorik."
                FontSize="Medium"
                HorizontalOptions="Center" />

            <Border 
                Padding="20"
                Stroke="White"
                StrokeThickness="2"
                StrokeShape="RoundRectangle"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                WidthRequest="300">

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label
                        Text="Bokningshistorik:"
                        FontSize="Medium"
                        HorizontalOptions="Center" />

                    <ListView ItemsSource="{Binding OldBookings}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding RoomId}" Detail="{Binding EndTime}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
