<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BokningsApp.Admin.BookedRooms"
             Title="Bokade Rum">
    <VerticalStackLayout Padding="20">

        <Image 
            WidthRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Aspect="AspectFit"
            Source="output.png" />

        <Label
            Text="HÃ¤r ser du bokade rum."
            FontSize="Medium"
            HorizontalOptions="Center" />

        <Border 
            Padding="20"
            Stroke="White"
            StrokeThickness="2"
            StrokeShape="RoundRectangle"
            BackgroundColor="Transparent"
            HorizontalOptions="Center"
            WidthRequest="300">

            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label
                    Text="Bokade rum:"
                    FontSize="Medium"
                    HorizontalOptions="Center" />

                <ListView ItemsSource="{Binding BookedRooms}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding RoomName}" Detail="{Binding RoomType}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>
